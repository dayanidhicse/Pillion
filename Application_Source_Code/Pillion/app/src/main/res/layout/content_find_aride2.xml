<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="38dp"
    android:layout_below="@id/toolbar"
    android:background="#f7f7f7"
    tools:showIn="@layout/app_bar_find_aride2"
    tools:context="com.example.dayanidhi.myapplication.FindARide2">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_below="@id/toolbar"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="fill_parent">


            <TextView
                android:layout_width="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="fill_parent"
                android:text="Mon. 25 Jan - 5.30 PM"
                android:id="@+id/dateandtime"
                android:layout_above="@+id/Confirm"
                android:layout_centerHorizontal="true" />

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view2"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                card_view:cardCornerRadius="3dp"
                android:layout_below="@+id/card_view"
                card_view:cardElevation="3dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@android:color/white"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:paddingTop="11dp"
                        android:text="5.30AM"
                        android:textColor="#606060"
                        android:id="@+id/time1"
                        android:layout_below="@+id/startheader"
                        android:layout_alignLeft="@+id/time2"
                        android:layout_alignStart="@+id/time2" />
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="160dp"
                        android:cropToPadding="true"
                        android:src="@drawable/marker"
                        android:id="@+id/imageView8"
                        android:layout_marginLeft="50dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:layout_marginTop="3dp"
                        android:text="PSR Silks And Sarees"
                        android:textColor="#2c2c2c"
                        android:id="@+id/startheader"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView8"
                        android:layout_toEndOf="@+id/imageView8" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Villianur Main Road, Reddiarpalayam, Puducherry, India."
                        android:textColor="#606060"
                        android:maxLines="3"
                        android:id="@+id/textView13"
                        android:layout_below="@+id/startheader"
                        android:layout_toRightOf="@+id/imageView8"
                        android:layout_toEndOf="@+id/imageView8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="PSR Silks And Sarees"
                        android:textColor="#2c2c2c"
                        android:paddingTop="85dp"
                        android:id="@+id/textView12"
                        android:layout_toRightOf="@+id/imageView8"
                        android:layout_toEndOf="@+id/imageView8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Villianur Main Road, Reddiarpalayam, Puducherry, India."
                        android:textColor="#606060"
                        android:maxLines="3"
                        android:layout_below="@+id/textView12"
                        android:layout_toRightOf="@+id/imageView8"
                        android:layout_toEndOf="@+id/imageView8"
                        android:id="@+id/textView15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:paddingTop="8dp"
                        android:text="6.30AM"
                        android:layout_marginLeft="8dp"

                        android:textColor="#606060"
                        android:id="@+id/time2"
                        android:layout_alignTop="@+id/textView15"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textAllCaps="true"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:paddingLeft="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Comment From Rider"
                android:id="@+id/textView18" />

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view4"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_below="@+id/card_view2"
                card_view:cardElevation="3dp">
                <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:textSize="15dp"
                        android:layout_marginTop="3dp"
                        android:textAllCaps="false"
                        android:maxLines="10"
                        android:textColor="#606060"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="I am going to my college daily from near the PSR Silks in the Villianur Road and will go upto Madagadipet. Anyone who is comfortable with travelling with me are acceptable. Preferred gender is Male."
                        android:id="@+id/ridercomment" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textAllCaps="true"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:paddingLeft="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ride Info"
                android:id="@+id/textView181" />

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view3"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="3dp"
                android:layout_below="@+id/card_view4">
                <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:paddingLeft="10dp"
                        android:textColor="#49a216"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="₹ 100 /-"
                        android:id="@+id/costofride" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:paddingLeft="10dp"
                        android:textColor="#606060"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="10 Kms"
                        android:id="@+id/distance"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                    <TextView
                        android:layout_below="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="#606060"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Detour: Yes"
                        android:id="@+id/detour" />
                    <View
                        android:layout_below="@id/detour"
                        android:layout_width="match_parent"
                        android:id="@+id/vw"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="10dp"
                        android:background="@android:color/darker_gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:paddingTop="10dp"
                        android:textColor="#606060"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Arvind - Pulsar 150 CC Black"
                        android:layout_below="@+id/vw"
                        android:id="@+id/ownerinfo" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/white"
                android:text="Chat"
                android:id="@+id/chat"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/card_view2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Book My Ride"
                android:id="@+id/confirm"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/chat"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

