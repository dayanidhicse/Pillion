<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">
    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/logo"/>
    <TextView android:textColor="#1e2736" android:text="@string/welcome"
        android:layout_below="@+id/img"
        android:id="@+id/wel"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:layout_centerHorizontal="true" />
    <TextView android:textColor="#1e2736"
        android:paddingTop="10dp"
        android:text="@string/msg1"
        android:id="@+id/msg"
        android:gravity="center_horizontal"
        android:layout_below="@+id/wel" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:textSize="15sp" android:layout_centerHorizontal="true"/>
    <TextView android:textColor="#1e2736"
        android:text="@string/msg2" android:id="@+id/msg1" android:textSize="15sp" android:layout_below="@+id/msg" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:paddingTop="5dp"/>

    <EditText
        android:id="@+id/username"
        android:paddingTop="20dp"
        android:layout_below="@+id/msg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1e2736"
        android:textAlignment="center"
        android:backgroundTint="@android:color/darker_gray"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textColorHint="@android:color/darker_gray"
        android:hint="Type your mobile number"/>

    <EditText
        android:id="@+id/pass"
        android:paddingTop="10dp"
        android:layout_below="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#1e2736"
        android:backgroundTint="@android:color/darker_gray"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:textColorHint="@android:color/darker_gray"
        android:hint="@string/password"/>

    <android.support.design.widget.FloatingActionButton android:id="@+id/login"
        android:layout_width="60dp" android:layout_height="60dp"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/ic_keyboard_arrow_right_white_24dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
